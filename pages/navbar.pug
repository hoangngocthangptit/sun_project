doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Mandala Store
    style.
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #ffffff; /* Nền trắng */
      }
      
      /* Navbar styles */
      .navbar {
        background-color: #ffffff;
        color: black;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px;
        border-bottom: 1px solid #ddd;
      }
      
      .navbar-brand {
        font-size: 1.5rem;
        margin-left: 10px;
      }
      
      .navbar-links {
        list-style: none;
        display: flex;
        align-items: center;
        margin-right: 10px;
      }
      
      .navbar-links li {
        margin-left: 20px;
      }
      
      .navbar-links li a {
        color: black;
        text-decoration: none;
      }
      
      .cart-icon {
        display: flex;
        align-items: center;
        margin-right: 10px;
      }
      
      .search-icon {
        margin-left: 10px; /* Sửa lỗi margin-right thành margin-left */
      }
